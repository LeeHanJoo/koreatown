<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="comment"
            type="kr.nt.koreatown.vo.RoomVO.Room.Comment"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip"
        android:background="#333333">


        <ImageView
            android:id="@+id/item_profile_img"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/icon" />


        <LinearLayout
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_profile_img"
            android:orientation="vertical">

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/item_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{comment.COMM_TEXT}" />

            <LinearLayout
                android:layout_marginTop="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/item_create_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{comment.MEMBER_NICK}" />

                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{comment.CREATE_DATE}" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>